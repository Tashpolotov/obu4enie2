<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">


    <EditText
        android:id="@+id/chislo_et"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:hint="Введите число"
        android:maxLines="1"
        android:textSize="30sp"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"/>

    <EditText
        android:id="@+id/chislo1_et"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chislo_et"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:hint="Введите число"
        android:maxLines="1"
        android:inputType="number"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/otvet_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/chislo_et"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"/>



    <Button
        android:id="@+id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otvet_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="+"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otvet_tv"
        app:layout_constraintStart_toEndOf="@id/plus_btn"
        android:layout_marginTop="30dp"
        android:text="-"
        android:layout_marginHorizontal="20dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/umnojenie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otvet_tv"
        app:layout_constraintStart_toEndOf="@+id/minus_btn"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="*"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/delenie_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otvet_tv"
        app:layout_constraintStart_toEndOf="@id/umnojenie_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="/"
        android:textSize="30sp"/>






</androidx.constraintlayout.widget.ConstraintLayout>